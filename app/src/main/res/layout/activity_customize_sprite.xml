<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBackground"
    tools:context=".CustomizeSprite">

    <TextView
        android:id="@+id/tbxHair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="142dp"
        android:layout_marginTop="382dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="29dp"
        android:fontFamily="@font/default_font"
        android:text="Hairstyle"
        android:textColor="#341D0A"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/tbxShirt"
        app:layout_constraintEnd_toStartOf="@+id/btnHairForward"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btnFeetBack"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="516dp"
        android:layout_marginEnd="266dp"
        android:layout_marginBottom="162dp"
        android:onClick="btnFeetBackClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/btnHairBack"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="101dp"
        android:layout_marginTop="345dp"
        android:layout_marginEnd="275dp"
        android:layout_marginBottom="279dp"
        android:onClick="btnHairBackClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <TextView
        android:id="@+id/tbxShirt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="166dp"
        android:layout_marginTop="428dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="34dp"
        android:fontFamily="@font/default_font"
        android:text="Shirt"
        android:textColor="#341D0A"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/tbxPants"
        app:layout_constraintEnd_toStartOf="@+id/btnShirtForward"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tbxFeet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="166dp"
        android:layout_marginTop="524dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="172dp"
        android:fontFamily="@font/default_font"
        android:text="Shoes"
        android:textColor="#341D0A"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnFeetForward"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btnShirtBack"
        android:layout_width="35sp"
        android:layout_height="35sp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="420dp"
        android:layout_marginEnd="266dp"
        android:layout_marginBottom="258dp"
        android:onClick="btnShirtBackClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/btnPantsBack"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="470dp"
        android:layout_marginEnd="266dp"
        android:layout_marginBottom="208dp"
        android:onClick="btnPantsBackClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <TextView
        android:id="@+id/tbxPants"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginStart="166dp"
        android:layout_marginTop="479dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="28dp"
        android:fontFamily="@font/default_font"
        android:text="Pants"
        android:textColor="#341D0A"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/tbxFeet"
        app:layout_constraintEnd_toStartOf="@+id/btnPantsForward"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btnHairForward"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="277dp"
        android:layout_marginTop="345dp"
        android:layout_marginEnd="99dp"
        android:layout_marginBottom="279dp"
        android:onClick="btnHairForwardClick"
        android:rotation="180"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <Button
        android:id="@+id/btnCustomizeCancel"
        style="@style/light_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="579dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="86dp"
        android:onClick="btnCustomizeCancelClick"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnCustomizeConfirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCustomizeConfirm"
        style="@style/light_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginTop="579dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="86dp"
        android:onClick="btnCustomizeConfirmClick"
        android:text="Confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnCustomizeCancel"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btnShirtForward"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="268dp"
        android:layout_marginTop="420dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="258dp"
        android:onClick="btnShirtForwardClick"
        android:rotation="180"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/btnPantsForward"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="268dp"
        android:layout_marginTop="470dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="208dp"
        android:onClick="btnPantsForwardClick"
        android:rotation="180"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/btnFeetForward"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="268dp"
        android:layout_marginTop="516dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="162dp"
        android:onClick="btnFeetForwardClick"
        android:rotation="180"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/imgSpriteHolder"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="383dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>