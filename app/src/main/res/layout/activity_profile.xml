<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background"
    tools:context=".Profile_screen">

    <Button
        android:id="@+id/btnInventory"
        style="@style/light_button"
        android:layout_width="196dp"
        android:layout_height="69dp"
        android:layout_marginTop="80dp"
        android:background="?attr/colorPrimary"
        android:onClick="btnInventoryClick"
        android:text="Inventory"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgTest" />

    <ImageButton
        android:id="@+id/btnLeaveProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@null"
        android:onClick="leaveClick"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSubmissions"
        app:srcCompat="@drawable/back" />

    <Button
        android:id="@+id/btnSubmissions"
        style="@style/light_button"
        android:layout_width="198dp"
        android:layout_height="69dp"
        android:layout_marginTop="80dp"
        android:background="?attr/colorPrimary"
        android:text="@string/submissions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCustomizeSprite" />

    <Button
        android:id="@+id/btnCustomizeSprite"
        style="@style/light_button"
        android:layout_width="196dp"
        android:layout_height="69dp"
        android:layout_marginTop="80dp"
        android:background="?attr/colorPrimary"
        android:onClick="btnCustomizeSpriteClick"
        android:text="Customization"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnInventory" />

    <TextView
        android:id="@+id/lblUsername"
        style="@style/heading"
        android:layout_width="289dp"
        android:layout_height="66dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgTest"
        android:layout_width="284dp"
        android:layout_height="166dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblUsername"
        app:srcCompat="@drawable/base_male" />
</androidx.constraintlayout.widget.ConstraintLayout>