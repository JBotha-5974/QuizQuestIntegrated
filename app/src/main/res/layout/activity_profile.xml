<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background"
    tools:context=".Profile_screen">

    <Button
        android:id="@+id/btnInventory"
        style="@style/light_button"
        android:layout_width="196dp"
        android:layout_height="69dp"
        android:layout_marginStart="106dp"
        android:layout_marginEnd="109dp"
        android:layout_marginBottom="208dp"
        android:onClick="btnInventoryClick"
        android:text="Inventory"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/btnSubmissions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.936" />

    <ImageButton
        android:id="@+id/btnLeaveProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@null"
        android:onClick="leaveClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/btnSubmissions"
        app:srcCompat="@drawable/back" />

    <Button
        android:id="@+id/btnSubmissions"
        style="@style/light_button"
        android:layout_width="198dp"
        android:layout_height="69dp"
        android:text="@string/submissions"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.703" />

    <Button
        android:id="@+id/btnCustomizeSprite"
        style="@style/light_button"
        android:layout_width="196dp"
        android:layout_height="69dp"
        android:layout_marginStart="106dp"
        android:layout_marginTop="343dp"
        android:layout_marginEnd="109dp"
        android:layout_marginBottom="40dp"
        android:onClick="btnCustomizeSpriteClick"
        android:text="Customization"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/btnSubmissions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblUsername"
        style="@style/heading"
        android:layout_width="289dp"
        android:layout_height="66dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/btnCustomizeSprite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.232" />
</androidx.constraintlayout.widget.ConstraintLayout>